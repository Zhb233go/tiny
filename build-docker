FROM golang

RUN apt-get update \
  && apt-get install cmake -y \
  && cd /tmp/ \
  && wget https://github.com/google/brotli/archive/v1.0.2.tar.gz -O brotli.tar.gz \
  && tar -xzvf brotli.tar.gz \
  && mv brotli-1.0.2 brotli \
  && cd brotli && ./configure-cmake \
  && make \
  && make test \
  && make install \
  